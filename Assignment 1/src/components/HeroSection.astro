---
const {heading = 'A Cool Heading'} = Astro.props
---
<!-- Hero -->
<section class="relative">
    <div class="container flex flex-col-reverse lg:flex-row items-center gap-12 mt-14 lg:mt-28">
        <!-- Content -->
        <div class="flex flex-1 flex-col items-center lg:items-start">
            <h2 class="text-bookmark-blue text-3xl md:text-4xl lg:text-5xl text-center lg:text-left mb-6">{heading}</h2>
            <p class="text-gray-700 text-lg text-center lg:text-left mb-6"><slot /></p>
            <div class="flex justify-center flex-wrap gap-6">
                <button type="button" class="btn btn-filled hover:bg-white hover:text-black">Check it Out</button>
                <button type="button" class="btn btn-outline hover:bg-bdazzled-blue hover:text-white">Learn More</button>
            </div>
        </div>
        <!-- Image -->
        <div class="flex justify-center flex-1 mb-10 md:mb-16 lg:mb-0 z-10">
            <img class="max-w-xl w-5/6 h-5/6 sm:w-3/4 sm:h-3/4 md:w-full md:h-full rounded-lg shadow-lg" src="/assets/pexels-photomix-company.webp" alt="Photo by PhotoMIX Company from Pexels">
        </div>
    </div>
    <!-- Rounded Rectangle -->
    <div class="hidden md:block overflow-hidden bg-burnt-sienna rounded-l-full absolute h-72 w-1/2 top-40 right-0 lg:-bottom-26 lg:-right-36"></div>
</section>